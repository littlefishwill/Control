<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!-- Login progress -->
        <LinearLayout android:id="@+id/email_login_form" android:layout_width="match_parent" android:layout_centerHorizontal="true" android:gravity="center"
            android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="20dp"  android:layout_marginLeft="10dp">

            <ImageView
                android:src="@drawable/privateservice"
                android:layout_width="50dip"
                android:layout_height="50dip" />

            <TextView
                android:textColor="@color/colorchoose"
                android:layout_width="wrap_content" android:textSize="15sp" android:layout_marginTop="10dip"
                android:layout_height="wrap_content" android:text="私人定制服务" />

            <TextView
                android:layout_width="wrap_content" android:textSize="15sp" android:layout_marginTop="30dip"
                android:layout_height="wrap_content" android:text="1.如果现有功能满足不了您的需求！" />

            <TextView
                android:layout_width="wrap_content" android:textSize="15sp" android:layout_marginTop="30dip"
                android:layout_height="wrap_content" android:text="2.您已经构思好，您想要实现的功能！" />

            <TextView
                android:layout_width="wrap_content" android:textSize="15sp" android:layout_marginTop="30dip"
                android:layout_height="wrap_content" android:text="3.告诉我们您的需求！为您优先研发。" />

            <TextView
                android:layout_width="wrap_content" android:textSize="15sp" android:layout_marginTop="30dip"
                android:layout_height="wrap_content" android:text="4.我们会根据需求的难易，收取一定研发费用。" />

            <Button
                android:id="@+id/btn_custommade_contans_us"
                android:layout_marginTop="30dip"
                android:layout_width="match_parent" android:textColor="#2B2B2B"
                android:layout_height="40dip" android:text="5.联系我们,为您私人定制！" />

        </LinearLayout>



</RelativeLayout>
