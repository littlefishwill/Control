<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent" android:layout_margin="10dip" android:background="@drawable/shape_item_device_bg"
        android:layout_height="100dip" android:clickable="true">
    <View android:id="@+id/v_device_contain"
        android:layout_width="match_parent" android:background="?android:attr/selectableItemBackground"
        android:layout_height="match_parent" android:clickable="false"/>

        <ImageView
            android:layout_width="40dip" android:layout_centerVertical="true"
            android:layout_height="40dip" android:src="@drawable/play_phone_ico"
            android:clickable="false" android:id="@+id/iv_ico" android:layout_marginLeft="20sp" />

        <LinearLayout android:layout_marginLeft="50dip" android:layout_marginRight="20dip"
        android:layout_width="match_parent" android:layout_centerVertical="true" android:gravity="center_vertical"
        android:layout_height="wrap_content" android:orientation="vertical" >

        <TextView android:id="@+id/tv_name" android:padding="0dip"
            android:layout_width="wrap_content" android:textSize="20sp" android:textColor="#2B2B2B"
            android:layout_height="wrap_content" android:text="name" android:layout_marginLeft="20dip" />
            <TextView android:id="@+id/tv_device_des" android:padding="0dip"
                android:layout_width="wrap_content" android:textSize="13sp" android:textColor="#2B2B2B"
                android:layout_height="wrap_content" android:text="name" android:layout_marginLeft="20dip" />

    </LinearLayout>


    </RelativeLayout>
</RelativeLayout>